  gem 'shoulda-matchers'
  gem 'awesome_print'
  gem 'rack-livereload'
  gem 'guard-livereload'
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'codeclimate-test-reporter', require: nil
  gem 'rspec-its', require: 'rspec/its'
  gem 'dotenv-rails'
end

gem 'webmock', group: :test

