.main-column
  fieldset.form-panel
    h2.heading-medium= copy_text[:claim_type]

    p.form-hint= copy_text[:claim_type_hint]

    = f.input :is_unfair_dismissal,
      as: :gds_check_boxes,
      wrapper_class: 'input form-group'

    = f.input :is_discrimination,
      as: :gds_check_boxes,
      wrapper_class: 'input form-group',
      reveal: { true => :discrimination_checkboxes }

    = f.input :discrimination_claims, label: false,
      collection: ClaimDetail::DISCRIMINATION_COMPLAINTS,
      as: :check_boxes,
      item_wrapper_class: 'block-label disabled',
      wrapper_html: {class: 'inline panel-indent label-column',id: 'discrimination_checkboxes'}

    = f.input :is_pay_related, as: :gds_check_boxes,
      wrapper_class: 'input form-group'

    = f.input :pay_claims, label: false,
      collection: ClaimDetail::PAY_COMPLAINTS, as: :check_boxes,
      item_wrapper_class: 'block-label disabled',
      wrapper_html: {class: 'inline panel-indent label-column form-group-checkboxes', id: 'pay_checkboxes'}

    = f.input :is_other_type_of_claim,
      as: :gds_check_boxes,
      wrapper_class: 'form-group-reveal',
      reveal: { true => :other_claim_details }

    = f.input :other_claim_details, as: :text,
      input_html: { rows: 5 },
      wrapper_class: 'panel-indent toggle-content'

    = f.input :claim_details, as: :text,
      input_html: { rows: 5 },
      wrapper_class: 'panel-indent toggle-content'

    = f.input :desired_outcomes, 
      collection: ClaimDetail::DESIRED_OUTCOMES, 
      as: :check_boxes,
      item_wrapper_class: 'block-label large-label'

    = f.input :other_outcome, 
      as: :text, 
      input_html: { rows: 5 }

    = f.input :is_whistleblowing, 
      as: :radio_buttons, 
      item_wrapper_class: 'block-label'

    = f.input :send_claim_to_whistleblowing_entity, 
      as: :radio_buttons, 
      item_wrapper_class: 'block-label'

    = f.input :other_known_claimants, 
      as: :radio_buttons, 
      item_wrapper_class: 'block-label'

    = f.input :other_known_claimant_names, 
      as: :text, 
      input_html: { rows: 5 },
      wrapper_class: 'panel-indent toggle-content'

    = f.input :miscellaneous_information,
      as: :text, 
      input_html: { rows: 5 }
