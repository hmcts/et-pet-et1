fieldset
  legend = t('.original_case_details')
  = f.input :et_case_number, required: true, input_html: { class: 'medium-input' }
  = f.input :et_tribunal_office, required: true, input_html: { class: 'medium-input' }
  = f.input :additional_information, as: :text, input_html: { class: 'medium-input' }

fieldset
  legend= t '.address_same_as_applicant'
  = f.input :address_same_as_applicant,
          as: :radio_buttons,
          required: true,
          label: false,
          item_wrapper_class: 'block-label',
          wrapper_html: {:class => 'form-group-reveal reveal-publish-delegate'},
          input_html: {:class => 'reveal-publish-publisher ga-vpv'},
          reveal: {true => 'main', false => 'main'}
