= f.collection_radio_buttons :address_changed, inline: true
= f.revealed_content :address_changed, values: [:true]
  = f.fieldset label: t('.claimant_details')
    hr class="govuk-section-break.govuk-section-break--visible govuk-!-margin-bottom-3"
    = f.text_field :claimant_address_building
    = f.text_field :claimant_address_street
    = f.text_field :claimant_address_locality
    = f.text_field :claimant_address_county
    = f.text_field :claimant_address_post_code
= f.collection_radio_buttons :claim_had_representative, inline: true
= f.revealed_content :claim_had_representative, values: [:true]
  = f.fieldset label: t('.representative_details')
    hr class="govuk-section-break.govuk-section-break--visible govuk-!-margin-bottom-3"
    = f.text_field :representative_name
    = f.text_field :representative_address_building
    = f.text_field :representative_address_street
    = f.text_field :representative_address_locality, optional: true
    = f.text_field :representative_address_county, optional: true
    = f.text_field :representative_address_post_code
= f.fieldset label: t('.respondent_details')
  hr class="govuk-section-break.govuk-section-break--visible govuk-!-margin-bottom-3"
  = f.text_field :respondent_name
  = f.text_field :respondent_address_building
  = f.text_field :respondent_address_street
  = f.text_field :respondent_address_locality
  = f.text_field :respondent_address_county
  = f.text_field :respondent_address_post_code
= f.fieldset label: t('.original_case_details')
  hr class="govuk-section-break.govuk-section-break--visible govuk-!-margin-bottom-3"
  = f.collection_select :et_country_of_claim
  = f.collection_select :et_tribunal_office
  = f.text_field :et_case_number
  = f.text_field :eat_case_number
  = f.text_area :additional_information, rows: 10, max_chars: 500
- content_for(:javascripts)
javascript:
  $(document).ready(function() { Et.pages.refunds.OriginalCaseDetailsPage() });
