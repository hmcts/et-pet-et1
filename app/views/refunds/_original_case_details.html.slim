      tr
        th = t('.fee')
        th = t('.date_paid')
        th = t('.payment_method')
      tr
        td
          = f.input :et_issue_fee,  label: false, input_html: {class: 'small-input'}
        td
          = f.input :et_issue_fee_date_paid, label: false, input_html: {class: 'small-input'}
        td
          = f.input :et_issue_fee_payment_method, label: false, collection: Refunds::OriginalCaseDetailsForm::PAYMENT_METHODS, include_blank: :translate
